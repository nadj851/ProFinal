
@using Microsoft.AspNet.Identity

@using WebApplication1.Models

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoff" }))
    {
        var db = new ApplicationDbContext();
        var UserID = User.Identity.GetUserId();
        var CurrentUser = db.Users.Where(a => a.Id == UserID).SingleOrDefault();

        @Html.AntiForgeryToken()
        <ul class="nav navbar-nav navbar-right">
          
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    <span class="glyphicon glyphicon-user"> </span>
                    <strong> Bienvenue : @CurrentUser.UserName  </strong>
                    <span class="glyphicon glyphicon-chevron-down"> </span>
                </a>
      
                <ul class="dropdown-menu">

                    <li>
                             <div class="navbar-user">
                                 <div class="row">
                                     <div class="col-lg-4">
                                         <p class="text-center">
                                             <span class="glyphicon glyphicon-user img-size"></span>

                                         </p>

                                     </div>


                                     <div class="col-lg-8">
                                         <p class="text-right">
                                             <strong> Bienvenue : @CurrentUser.UserName  </strong>      </p>
                                   @if (CurrentUser.UserType == "Vendeur")
                                   {
                                    <a href="~/Home/GetObjetByVendeur" class="btn btn-success btn-block"> Objets que tu a met en vente </a>
                                    <a href="~/Objets/Create" class="btn btn-success btn-block"> Ajouter un nouveau objet ici </a>

                                   }
                                   else if (CurrentUser.UserType == "Acheteur")
                                   {
                                    <a href="~/Home/GetObjetByUser" class="btn btn-success btn-block"> Objets que tu a  acheter ou encherer </a>

                                   }

                                   else if (CurrentUser.UserType == "Admins")
                                   {

                                    <a href="~/Objets/Index" class="btn btn-success btn-block"> Gestion Objets </a>
                                    <a href="~/Categories/Index" class="btn btn-success btn-block"> Gestion Categories </a>
                                    <a href="~/Roles/Index" class="btn btn-success btn-block"> Gestion Roles </a>
                                    <a href="~/ApplicationUsers/Index" class="btn btn-success btn-block"> Gestion Utilisateur </a>

                                   }


                                         <a href="~/Account/EditProfile" class="btn btn-primary btn-block"> Modifier votre Compte </a>
                                     </div>

                                 </div>

                            </div>

                   </li>
                    <li class="divider"></li>
                    <li>

                    <div>

                        <div class="row">
                            <div class="col-lg-12">
                                <p>
                                    <a href="javascript:document.getElementById('logoff').submit()" class="btn btn-danger btn-block">Deconnecter       </a> 
                                </p>
                            </div>

                        </div>
                    </div>

                    </li>

                    </ul>

</li>

                @*<li>
                @Html.ActionLink("Bonjour: "+User.Identity.GetUserName(),"Index","Manage");
            </li>

            <li>
                <a href="javascript:document.getElementById('logoff').submit()">Deconnecter       </a>
            </li>*@
</ul>

    }

}

else
{
<ul class="nav navbar-nav navbar-right">
    <li>
        <a href="~/Account/Login">
            <i class="glyphicon glyphicon-user"></i>
            connecter
        </a>
    </li>

    <li>
        <a href="~/Account/Register">
            <i class="glyphicon glyphicon-lock"></i>
            Enregister
        </a>
    </li>
</ul>

}